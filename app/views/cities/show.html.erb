  <div id="fb-root"></div>
  <%=render 'cities/script_face'%>
    <!-- Header -->
    <a name="about"></a>
    <div class="intro-header-show">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message-show black">
                        <h2>Análise da Cidade</h2>
                        <hr class="intro-divider">
                        <div class="list-inline intro-social-buttons black">
                            <ul class="cardboard">
                                <%= form_tag(cities_show_path, :method => :get) do %>
                                    <h1>  <%= @city.name %> </h1>   
                                    <%= render 'cardboard' %>
                                <% end %>
                            </ul>
                        </div>
                        <div>
                         <%= link_to "Voltar", find_path(:id => nil), :class => "btn btn-default" %>&nbsp;&nbsp;
                         <%= link_to "Compare", compare_path(:id => @oldID), :class => "btn btn-primary" %>
                           <%= form_tag(cities_show_path, :method => :get) do %>
                             <center>
                                <br><br><br><div class="fb-like" data-href ="/cities/<%=@city.id%>" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>
                             </center>
                           <%end%>
                       </div>

                        <h2>Comentários</h2>
                        <% @city.comments.each_slice(2) do |f| %>
                            <%= render f[0]%>
                        <% end %>

                        <h2>Adicionar um comentário:</h2>
                        <%= render 'comments/form' %>

                        <%= link_to 'Top', city_path %>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container -->
    </div>
</body>
