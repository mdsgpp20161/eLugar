<body>
    <!-- Header -->
    <div class="intro-header-find">
    <div class="container">
        <div class="row">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message-find">
                        <div class="shadow">
                            <h1>Escolha a cidade que deseja conhecer !</h1>
                        </div>
                        <hr>
                        <ul class="list-inline intro-social-buttons black">
                            <li>
                                <%= form_tag(find_path, :method => :get) do %>
                                    <div class="input-group">
                                        <%= text_field_tag :find, nil, placeholder: 'Digite o nome da cidade...', size: '50', class: 'form-control' %>
                                        <span class="input-group-btn">
                                            <%= button_tag(type: "submit", class: "btn btn-primary") do %>
                                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                        </span>
                                    <% end %>
                                    </div>
                                    <br>
                                    <%= render 'cities/order_and_filter' %>
                                <% end %>
                            </li>
                            <li>
                                <table>
                                    <% @cities.each_with_index do |city, index| %>
                                        <% if index%3==0 && index != 0 %>
                                            <tr>
                                        <% end %>
                                        <%= render :partial => 'city_image', :locals => { :city => city} %>
                                    <% end %> 
                                    <% if @find %>
                                        <%= will_paginate @citiesPaginated, :params => {:find => @find} %>
                                    <% else %>
                                        <%= will_paginate @citiesPaginated %>
                                    <% end %>
                                </table>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        var count = 0;
            $("#show_filter_form").click(function(){
                $("#filter_form").toggle("slow");
                if(count == 0){
                    $("#show_filter_form").text("-");
                    count = 1;
                }else{
                    $("#show_filter_form").text("+");
                    count = 0;
                }
            });
    </script>
</body>