<meta http-equiv="Content-Type" content="text/html; charset=utf-8">

<body>
  <center>
    <%= wicked_pdf_image_tag 'eLugarLogo.png', :width=>"500"%>
      <br><br><br>
      <h2>Relatório de Comparação</h2>
    <table>
      <br><br>
      <tr height="40">
        <td>
          <h2><%= @city1.name %></h2>
        </td>
        <td width="500">
        </td>
        <td>
          <h2><%= @city2.name %></h2>
        </td>
      </tr>
      <% @city1.attributes.each do |attr_name, attr_value| %>
          <% if (valid_attributes[attr_name]) %>
          <tr height="40">
            <td width="50">
              <%= attr_value%>
            </td>
            <td width="500">
              <center>
                <%= "#{attribute_to_text[attr_name]} #{attribute_to_metric[attr_name]}" %>
              </center>
            </td>
            <td>
              <%= @city2.send(attr_name.to_sym) %>
            </td>
          </tr>
          <% else %>
          <!-- Do nothing -->
          <% end %>
      <%end%>
    </table>
  </center>
</body>
